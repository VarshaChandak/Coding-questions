class Solution {
    public String longestPalindrome(String input) {
        String longestPalindrome = "";
        char[] chars = input.toCharArray();
        for (int i = 0; i < chars.length; i++) {
            for (int j = i; j < chars.length; j++) {
                if (chars[i] == chars[j]) { 
                    int start = i, end = j;
                    while (start <= end && chars[start] == chars[end]) {
                        start++;
                        end--;
                    }
                    if (start > end && (j - i + 1) > longestPalindrome.length()) {
                        longestPalindrome = input.substring(i, j + 1);
                    }
                }
            }
        }
        
        return longestPalindrome.isEmpty() ? input.substring(0, 1) : longestPalindrome;
    }
}
