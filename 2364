class Solution {

    public long countBadPairs(int[] nums) {
        HashMap<Integer, Integer> map = new HashMap<>();
        int n = nums.length;
        for (int i = 0; i < n; i++) {
            nums[i] = i - nums[i];
        }
        long mp = 0;
        for (int i = n - 1; i >= 0; i--) {
            int op = map.getOrDefault(nums[i], 0);
            mp += (n - i) - op - 1;
            map.put(nums[i], op + 1);
        }

        return mp;
    }
}
